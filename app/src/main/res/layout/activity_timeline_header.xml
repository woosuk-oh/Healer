<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="223.75dp"
        android:background="@drawable/profilebg"
        android:gravity="bottom"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="76.75dp"
            android:layout_height="76.75dp"
            android:layout_marginBottom="53.75dp"
            android:layout_marginStart="29.25dp"
            android:src="@drawable/nophoto" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="53.75dp"
            android:layout_marginStart="29.25dp"

            >
            <TextView
                android:id="@+id/timeline_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍길동"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginBottom="10.5dp"

                />


            <TextView
                android:id="@+id/timeline_user_info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1993.10.06 / 남자"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/timeline_user_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="감정 상태: 매우 좋음"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
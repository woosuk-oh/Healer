<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="290dp"
    android:layout_height="352.5dp"
    android:layout_gravity="center"
    android:background="@color/color1"
    android:orientation="vertical"
    card_view:cardCornerRadius="25dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@color/color3"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:text="프로필 수정"
                android:textColor="@color/color5"
                android:textSize="20sp"

                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_update_user_photo"
                android:layout_width="76.75dp"
                android:layout_height="76.75dp"
                android:layout_marginBottom="10.5dp"
                android:src="@drawable/nophoto" />

            <LinearLayout
                android:layout_width="185.25dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/profile_update_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:text="홍길동"
                    android:textColor="@color/color5"
                    android:textSize="15sp" />

                <include layout="@layout/line_bar_util" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="185.25dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/profile_update_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:text="1993년 4월 1일"
                    android:textColor="@color/color5"
                    android:textSize="15sp"
                    android:onClick="onClick"
                    />

                <include layout="@layout/line_bar_util" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="185.25dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
         >

                <TextView
                    android:id="@+id/profile_update_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:text="남자"
                    android:textColor="@color/color5"
                    android:textSize="15sp" />

                <include layout="@layout/line_bar_util" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color3"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color1">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/emotion_success_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:text="적용"


                    />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color1">

                </LinearLayout>

                <Button
                    android:id="@+id/emotion_fail_btn"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:text="취소"

                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
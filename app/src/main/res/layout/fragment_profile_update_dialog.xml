<?xml version="1.0" encoding="utf-8"?>





<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="290dp"
    android:layout_height="352.5dp"
    android:layout_gravity="center"
    android:background="@color/color1"
    android:orientation="vertical"
    card_view:cardCornerRadius="25dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="352.5dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@color/color1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                app:font="custom1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:text="프로필 수정"
                android:textColor="@color/color5"
                android:textSize="20sp"

                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_update_user_photo"
                android:layout_width="76.75dp"
                android:layout_height="76.75dp"
                android:layout_marginBottom="10.5dp"
                android:src="@drawable/nophoto"
                card_view:civ_border_color="@color/color5"
                card_view:civ_border_width="5dp"/>

            <LinearLayout
                android:layout_width="185.25dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_update_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="홍길동"
                    android:textColor="@color/color5"
                    android:textSize="15sp" />

                <include layout="@layout/line_bar_util" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="185.25dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"

                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/profile_update_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:onClick="onClick"
                        android:text="20100000"
                        android:textColor="@color/color5"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="13dp"
                        android:layout_marginLeft="20dp"

                        android:background="@drawable/activatingdownbtn" />
                </LinearLayout>

                <include layout="@layout/line_bar_util" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="185.25dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <Spinner
                    android:id="@+id/profile_update_sex"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="23dp"
                    android:gravity="center"


                    />


                <!--   <TextView
                       android:id="@+id/profile_update_sex"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:layout_marginBottom="8dp"
                       android:text="남자"
                       android:textColor="@color/color5"
                       android:textSize="15sp" />-->

                <include layout="@layout/line_bar_util" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color5">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/profile_success_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@null"

                    android:onClick="onClick"
                    android:text="적용"
                    app:font="custom1"
                    />


                <LinearLayout
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/color5">

                </LinearLayout>

                <Button
                    android:id="@+id/profile_cancel_btn"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:onClick="onClick"
                    android:text="취소"
                    app:font="custom1"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>

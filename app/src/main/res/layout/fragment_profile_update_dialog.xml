<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="290dp"
    android:layout_height="352.5dp"
    android:layout_gravity="center"
    android:background="@color/color1"
    android:orientation="vertical"
    card_view:cardCornerRadius="25dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="290dp"

        android:layout_height="352.5dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="35dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:text="프로필 수정"
                android:textColor="@color/color5"
                android:textSize="20sp"
                app:fontName="custom1"

                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_update_user_photo"
                android:layout_width="76.75dp"
                android:layout_height="76.75dp"
                android:src="@drawable/nophoto"
                card_view:civ_border_color="@color/color5"
                card_view:civ_border_width="5dp" />

            <LinearLayout
                android:layout_width="185.25dp"
                android:layout_height="37.5dp"
                android:layout_marginTop="10.5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_update_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="홍길동"

                    android:textAlignment="center"
                    android:textColor="@color/color5"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="185.25dp"
                android:layout_height="1dp"
                android:background="#b6afa9">

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="185.25dp"
                android:layout_height="37.5dp"
                android:gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/profile_update_birth"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="20100000"
                    android:textAlignment="center"
                    android:textColor="@color/color5"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintVertical_bias="0.555"
                    app:layout_constraintRight_toRightOf="@+id/imageView2"
                    app:layout_constraintHorizontal_bias="1.0" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/activatingdownbtn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginEnd="16dp" />


            </android.support.constraint.ConstraintLayout>

            <LinearLayout

                android:layout_width="185.25dp"
                android:layout_height="1dp"
                android:background="#b6afa9">

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="185.25dp"
                android:layout_height="37.5dp"
                android:gravity="right"
                android:orientation="horizontal">


                <Spinner
                    android:id="@+id/profile_update_sex"
                    android:layout_width="99dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"

                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.671"
                    app:layout_constraintRight_toLeftOf="@+id/imageView4"
                    android:layout_marginRight="0dp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/activatingdownbtn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginEnd="16dp" />

                <!--   <TextView
                       android:id="@+id/profile_update_sex"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:layout_marginBottom="8dp"
                       android:text="남자"
                       android:textColor="@color/color5"
                       android:textSize="15sp" />-->

            </android.support.constraint.ConstraintLayout>

            <LinearLayout

                android:layout_width="185.25dp"
                android:layout_height="1dp"
                android:layout_marginBottom="27.75dp"
                android:background="#b6afa9">

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color5">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/profile_success_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:onClick="onClick"

                    android:text="적용"
                    android:textColor="@color/color5"
                    app:fontName="custom1" />


                <LinearLayout
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/color5">

                </LinearLayout>

                <Button
                    android:id="@+id/profile_cancel_btn"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:onClick="onClick"
                    android:text="취소"
                    android:textColor="@color/color5"
                    app:fontName="custom1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/home_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26.5dp"
        android:text="오늘은 0월 0일"
        android:textColor="@color/color5"
        android:textSize="20sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/home_user_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27.25dp"
        android:src="@drawable/nophoto"
        app:civ_border_color="@color/color5"
        app:civ_border_width="5dp"/>

    <TextView
        android:id="@+id/home_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:textColor="@color/color5"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/home_user_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38.5dp"
        android:text="상태값"
        android:textColor="@color/color5"
        android:textSize="30sp"
        app:font="custom1"

        />

    <LinearLayout
        android:id="@+id/program_in"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:background="@color/color4"
        android:onClick="onClick"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14.5dp"
            android:gravity="center"
            android:text="프로그램 진행률"

            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="0%"
            android:textColor="@color/white"
            android:textSize="45sp"
            app:font="custom1" />

        <ImageView

            android:id="@+id/imageView3"
            android:layout_width="11.75dp"
            android:layout_height="18dp"
            android:layout_marginEnd="22dp"
            android:src="@drawable/mainbtn" />


    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="190.75dp"
        android:background="@drawable/profilebg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="76.75dp"
            android:layout_height="76.75dp"
            android:layout_marginStart="29.25dp"
            android:src="@drawable/nophoto" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29.25dp"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/timeline_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.5dp"
                android:text="홍길동"
                android:textColor="@color/white"
                android:textSize="25sp"

                />


            <TextView
                android:id="@+id/timeline_user_info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1993.10.06 / 남자"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/timeline_user_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="감정 상태: 매우 좋음"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/color1">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="86.5dp"
            android:paddingLeft="23.25dp"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#b0b1b2"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/timeline_state_icon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="36.5dp"
                        android:src="@drawable/projectnull" />

                    <ImageView
                        android:id="@+id/timeline_state_icon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="41.75dp"
                        android:src="@drawable/projectnull" />

                    <ImageView
                        android:id="@+id/timeline_state_icon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="41.75dp"
                        android:src="@drawable/projectnull" />

                    <ImageView
                        android:id="@+id/timeline_state_icon4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="41.75dp"
                        android:src="@drawable/projectnull" />

                    <ImageView
                        android:id="@+id/timeline_state_icon5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="41.75dp"
                        android:src="@drawable/projectnull" />


                    <ImageView
                        android:id="@+id/timeline_state_icon6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="41.75dp"
                        android:src="@drawable/projectnull" />

                    <ImageView
                        android:id="@+id/timeline_state_icon7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="41.75dp"
                        android:src="@drawable/projectnull" />

                    <ImageView
                        android:id="@+id/timeline_state_icon8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="41.75dp"
                        android:src="@drawable/projectnull" />

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/linearLayout"
            android:orientation="vertical"
            android:paddingTop="36.5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7.75dp"
                        android:text="서베이 등록"
                        android:textColor="@color/color5"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017.01.01"
                        android:textColor="@color/color5"
                        android:textSize="12.5sp" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>